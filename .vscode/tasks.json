{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "imgui-build",
            "command": "C:\\MinGW\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-DUNICODE",
                "-I${fileDirname}\\imgui", 
                "-I${fileDirname}\\back", 
                "${fileDirname}\\back\\imgui_impl_opengl3.cpp", 
                "${file}",
                "${fileDirname}\\back\\imgui_impl_win32.cpp", 
                "${fileDirname}\\imgui\\imgui*.cpp", 
                "-lopengl32", 
                "-lgdi32", 
                "-ldwmapi",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "compiler: cl.exe"
        }
    ],
    "version": "2.0.0"
}